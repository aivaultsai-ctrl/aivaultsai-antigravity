rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - keep secure
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // PUBLIC ACCESS FOR DEMO/DEV (Temporary)
    // ---------------------------------------------------------
    
    // AI Employees - Allow public read to populate dashboard
    match /ai_employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authed users can edit (or admin)
    }
    
    // Workflow executions - Allow public read for results visualization
    match /workflow_executions/{executionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Agent logs
    match /agent_logs/{logId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Leads (Legacy)
    match /leads/{leadId} {
      allow read, write: if request.auth != null;
    }

    // Advice Leads (New System - backend only writing mostly, but let's allow secure access)
    match /advice_leads/{leadId} {
       // Since the API uses firebase-admin, it bypasses rules.
       // Client SDKs (if used):
       allow create: if request.auth != null;
       allow read, update: if request.auth != null && request.auth.token.admin == true;
    }

    // Workspaces
     match /workspaces/{workspaceId} {
      allow read, write: if request.auth != null;
    }
  }
}
