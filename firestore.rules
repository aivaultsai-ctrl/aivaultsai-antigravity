rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // AI Employees - read/write for authenticated users
    match /ai_employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    // Workflow executions - read/write for authenticated users
    match /workflow_executions/{executionId} {
      allow read, write: if request.auth != null;
    }
    
    // Agent logs - read/write for authenticated users
    match /agent_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Workspaces
    match /workspaces/{workspaceId} {
      allow read, write: if request.auth != null;
    }
    
    // Leads
    match /leads/{leadId} {
      allow read, write: if request.auth != null;
    }
  }
}
